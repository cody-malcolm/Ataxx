<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:id="borderPane"
            prefHeight="700.0" prefWidth="1200.0" >

    <!--    link stylesheet -->
    <stylesheets>
        <URL value="@game.css" />
    </stylesheets>

    <!--    padding-->
    <padding>
        <Insets top="10" bottom="10" left="10" right="10" />
    </padding>

    <!--    temp buttons-->
    <top>
        <GridPane hgap="20">
            <Label GridPane.columnIndex="0" fx:id="gameIDlabel" styleClass="gameIDlabel" />
            <HBox GridPane.columnIndex="1">
                <Label fx:id="blueNameLabel" styleClass="playerLabel" />
                <Label fx:id="blueScoreLabel" styleClass="playerLabel" />
                <Label fx:id="redScoreLabel" styleClass="playerLabel" />
                <Label fx:id="redNameLabel" styleClass="playerLabel" />
            </HBox>
        </GridPane>
    </top>

    <left>
        <VBox alignment="CENTER" spacing="-10" styleClass="leftContainer" minWidth="315">
            <ScrollPane fx:id="messagesScrollpane" minHeight="465" styleClass="messagesContainer">
                <VBox fx:id="messagesContainer" spacing="5">
                    <Label fx:id="buffer"></Label>
                </VBox>
            </ScrollPane>
            <TextField fx:id="chat" promptText="Type to chat. Press Enter to send." onAction="#chat" styleClass="chat">

            </TextField>
        </VBox>
    </left>

    <bottom>
        <GridPane hgap="20">
            <Button GridPane.columnIndex="0" fx:id="replayButton" styleClass="button" visible="false">Replay</Button>
            <Button GridPane.columnIndex="1" fx:id="newGameButton" styleClass="button" visible="false">New Game</Button>
            <Label GridPane.columnIndex="2" prefWidth="10" />
            <Label GridPane.columnIndex="3" fx:id="feedbackLabel" styleClass="feedbackLabel" />
            <Button GridPane.columnIndex="4" fx:id="resignButton" styleClass="button">Resign</Button>
            <Button GridPane.columnIndex="5" fx:id="disconnectButton" styleClass="button">Disconnect</Button>
        </GridPane>
    </bottom>
</BorderPane>
